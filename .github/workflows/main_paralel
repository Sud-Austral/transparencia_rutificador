name: Descarga
# Controls when the workflow will run
on:

  # Triggers the workflow on push or pull request events but only for the main branch
  push:
    branches: [ main ]
  schedule:
    - cron:  '0 0 * * 6'
  #  At 00:00 on Saturday

jobs:
  build1:
    runs-on: ubuntu-latest
    continue-on-error: true
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: Checkout del repositorio
      uses: actions/checkout@v2

    - name: Configurar Python ${{ matrix.python-version }}
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        python -m pip install --upgrade pip
        pip install -r requirements.txt 
        wget --no-check-certificate https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalPlanta.csv > /dev/null
        python build1.py
        #rm TA_PersonalPlanta.csv
    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files1
        path: |
          build1
    

  build2:
    runs-on: ubuntu-latest
    continue-on-error: true
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: Checkout del repositorio
      uses: actions/checkout@v2

    - name: Configurar Python ${{ matrix.python-version }}
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        python -m pip install --upgrade pip
        pip install -r requirements.txt 
        #wget --no-check-certificate https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalContrata.csv > /dev/null
        python build2.py
        #rm TA_PersonalPlanta.csv
    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files2
        path: |
          build2
          
      
    
  build3:
    runs-on: ubuntu-latest
    continue-on-error: true
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: Checkout del repositorio
      uses: actions/checkout@v2

    - name: Configurar Python ${{ matrix.python-version }}
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        python -m pip install --upgrade pip
        pip install -r requirements.txt 
        #wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalPlanta.csv > /dev/null
        python build3.py
        #rm TA_PersonalPlanta.csv
    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files3
        path: |
          build3
      
  build4:
    runs-on: ubuntu-latest
    continue-on-error: true
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: Checkout del repositorio
      uses: actions/checkout@v2

    - name: Configurar Python ${{ matrix.python-version }}
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        python -m pip install --upgrade pip
        pip install -r requirements.txt 
        #wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalPlanta.csv > /dev/null
        python build4.py
        #rm TA_PersonalPlanta.csv
    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files4
        path: |
          build4
      
  unir:
    runs-on: ubuntu-latest
    needs: [build1,build2,build3,build4]
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: Checkout del repositorio
      uses: actions/checkout@v2

    - name: Configurar Python ${{ matrix.python-version }}
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: Download artifact
      uses: actions/download-artifact@v2
      with:
        name: shared-files1
        path: shared_1
      continue-on-error: true
    - name: Download artifact2 
      uses: actions/download-artifact@v2
      with:
        name: shared-files2
        path: shared_2
      continue-on-error: true
    - name: Download artifact3 
      uses: actions/download-artifact@v2
      with:
        name: shared-files3
        path: shared_3
      continue-on-error: true
    - name: Download artifact4
      uses: actions/download-artifact@v2
      with:
        name: shared-files4
        path: shared_4
      continue-on-error: true
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        python -m pip install --upgrade pip
        pip install -r requirements.txt 
        #wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalPlanta.csv > /dev/null
        python unir.py
        #rm TA_PersonalPlanta.csv
        rm -r shared_1
        rm -r shared_2
        rm -r shared_3
        rm -r shared_4
        echo "hola" > termino.txt
        
    - name: Commit y push cambios
      uses: stefanzweifel/git-auto-commit-action@v2
      with:
        commit_message: "Actualizacion"
        branch: main
        commit_user_name: Actions Bot
        commit_user_email: lmonsalve22@gmail.com
        commit_author: DataIntelligence BOT <lmonsalve22@gmail.com>
        push_options: '--force'
  


   
   
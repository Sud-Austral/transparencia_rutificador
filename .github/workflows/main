name: Descarga
# Controls when the workflow will run
on:

  # Triggers the workflow on push or pull request events but only for the main branch
  push:
    branches: [ main ]
  schedule:
    - cron:  '0 0 * * 6'
  #  At 00:00 on Saturday

jobs:
  build1:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: Checkout del repositorio
      uses: actions/checkout@v2

    - name: Configurar Python ${{ matrix.python-version }}
      uses: actions/setup-python@v2
      with:
        python-version: 3.7
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        python -m pip install --upgrade pip
        pip install -r requirements.txt 
        #python test.py
        wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalPlanta.csv > /dev/null
        python build1.py
        tar -czvf TA_PersonalPlanta.tar.gz TA_PersonalPlanta.csv


    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files
        path: |
          #TA_PersonalPlanta.csv
          TA_PersonalPlanta.tar.gz
  build2:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        #python test.py
        wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalContrata.csv > /dev/null
        tar -czvf TA_PersonalContrata.tar.gz TA_PersonalContrata.csv

    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files
        path: |
          #TA_PersonalContrata.csv
          TA_PersonalContrata.tar.gz
  build3:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        #python test.py
        wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalCodigotrabajo.csv > /dev/null
        tar -czvf TA_PersonalCodigotrabajo.tar.gz TA_PersonalCodigotrabajo.csv

    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files
        path: |
          #TA_PersonalCodigotrabajo.csv
          TA_PersonalCodigotrabajo.tar.gz
  build4:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.7]
    steps:
    - name: AUTOMATIZACIÓN
      run: |
        echo "Vamos a lo importante...1"    
        #python test.py
        wget https://www.cplt.cl/transparencia_activa/datoabierto/archivos/TA_PersonalContratohonorarios.csv > /dev/null
        tar -czvf TA_PersonalContratohonorarios.tar.gz TA_PersonalContratohonorarios.csv
    - name: Upload artifact
      uses: actions/upload-artifact@v2
      with:
        name: shared-files
        path: |
          #TA_PersonalContratohonorarios.csv
          TA_PersonalContratohonorarios.tar.gz

  cleanup:
    runs-on: ubuntu-latest
    needs: [build1,build2,build3,build4]
    steps:
    - name: Checkout repository
      uses: actions/checkout@v2
    - name: Delete old log files
      run: |
        find /home/runner/runners -name "*.log" -mtime +7 -exec rm {} \;
  unir:
    runs-on: ubuntu-latest
    needs: [cleanup]
    strategy:
      matrix:
        python-version: [3.7]
    steps:
      - name: Checkout del repositorio
        uses: actions/checkout@v2

      - name: Configurar Python ${{ matrix.python-version }}
        uses: actions/setup-python@v2
        with:
          python-version: 3.7
      

      - name: Download artifact
        uses: actions/download-artifact@v2
        with:
          name: shared-files
          path: shared

      - name: AUTOMATIZACIÓN
        run: |
          cd shared
          tar -xzvf TA_PersonalPlanta.tar.gz
          tar -xzvf TA_PersonalContrata.tar.gz
          tar -xzvf TA_PersonalCodigotrabajo.tar.gz
          tar -xzvf TA_PersonalContratohonorarios.tar.gz
          ls
          cd ..
          python -m pip install --upgrade pip
          pip install -r requirements.txt   
          echo "Primer"       
          python test.py
          echo "Segundo"  
          rm -r shared
      
      - name: Commit y push cambios
        uses: stefanzweifel/git-auto-commit-action@v2
        with:
          commit_message: "Actualizacion"
          branch: main
          commit_user_name: Actions Bot
          commit_user_email: lmonsalve22@gmail.com
          commit_author: DataIntelligence BOT <lmonsalve22@gmail.com>
          push_options: '--force'

   